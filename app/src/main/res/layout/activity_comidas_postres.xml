<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primario"
                android:baselineAligned="false"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="178dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip">


                    <Button
                        android:id="@+id/bares"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/beerz"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/comida_china"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/ricez"
                        android:textAllCaps="false" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="178dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip">


                    <Button
                        android:id="@+id/comida_internacional"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"

                        android:background="@drawable/interz"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/comida_rapida"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/burgerz"
                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="178dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip">


                    <Button
                        android:id="@+id/comida_tradicional"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/roastchickenz"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/comida_vegetariana"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/saladz"
                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="178dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip">


                    <Button
                        android:id="@+id/fruterias"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/icez"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/licores"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/liquorz"
                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="178dp"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip">


                    <Button
                        android:id="@+id/crepes_pizzeria"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/pizz"
                        android:textAllCaps="false" />


                    <Button
                        android:id="@+id/invi"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="?android:selectableItemBackground"
                        android:textAllCaps="false" />


                </LinearLayout>


                <!--LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">

                </LinearLayout-->

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</RelativeLayout>