<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:baselineAligned="false"
            android:background="@color/primario"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"

                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent" android:layout_height="178dp">


                <Button
                    android:id="@+id/bebes"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"

                    android:layout_weight="1.0"
                    android:background="@drawable/bebe"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/deportivo"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"

                    android:layout_weight="1.0"
                    android:background="@drawable/sports"
                    android:textAllCaps="false" />



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"

                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent" android:layout_height="178dp">


                <Button
                    android:id="@+id/hombre"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"

                    android:background="@drawable/clothes"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/mujer"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"

                    android:layout_weight="1.0"
                    android:background="@drawable/dress"
                    android:textAllCaps="false" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"

                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent" android:layout_height="178dp">


                <Button
                    android:id="@+id/ninos"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/ninos"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/comida_vegetariana"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"

                    android:layout_weight="1.0"
                    android:background="@drawable/shopping"
                    android:textAllCaps="false" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"

                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent" android:layout_height="178dp">


                <Button
                    android:id="@+id/invi"
                    android:layout_width="0.0dip" android:layout_height="fill_parent"
                    android:textAllCaps="false"
                    android:background="?android:selectableItemBackground"
                    android:layout_weight="1.0" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
</RelativeLayout>