<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="@drawable/m"
                android:baselineAligned="false"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="173dp"
                    android:orientation="horizontal"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="4.0dip"

                    android:paddingTop="5.0dip">


                    <Button
                        android:id="@+id/comi_postres"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"


                        android:background="@drawable/dinnerz"
                        android:paddingRight="60dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/tiendas_ropa"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/hangerz"

                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="178dp">


                    <Button
                        android:id="@+id/tiendas_varias"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/salesz"
                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"

                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/hogar_remodelacion"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/homez"
                        android:gravity="bottom|center"

                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">


                    <Button
                        android:id="@+id/mascotas_agro"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/petz"
                        android:gravity="bottom|center"

                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/salud_belleza"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/saunaz"

                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">


                    <Button
                        android:id="@+id/transporte"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/trafficz"
                        android:gravity="bottom|center"

                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/mantenimiento"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/supportz"

                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">


                    <Button
                        android:id="@+id/servicios"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"

                        android:layout_weight="1.0"
                        android:background="@drawable/customerservicez"
                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/turismo"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/trekkingz"
                        android:gravity="bottom|center"

                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">


                    <Button
                        android:id="@+id/guia_turistica"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"

                        android:background="@drawable/guidez"
                        android:gravity="bottom|center"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/tiendas_calzado"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/runningz"

                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">


                    <Button
                        android:id="@+id/dependencias"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"

                        android:background="@drawable/routez"
                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/emergencias"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"

                        android:background="@drawable/emergencyz"
                        android:gravity="bottom|center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorText2"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"

                    android:paddingLeft="4.0dip"
                    android:paddingTop="5.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="1.0dip"
                    android:layout_width="fill_parent" android:layout_height="178dp">




                    <Button
                        android:id="@+id/invi"
                        android:layout_width="0.0dip" android:layout_height="fill_parent"
                        android:textAllCaps="false"
                        android:background="?android:selectableItemBackground"
                        android:layout_weight="1.0" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</RelativeLayout>